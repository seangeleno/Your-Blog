<% @blog.each do |blog| %>
	<div class="col-sm-12">
		<h3 class="text-center">
			<%= blog.comments.commenter %>
		</h3>
		<p><%= blog.comments.opinion %></p>
		<ul>
			<li><%= link_to 'Edit Comment' , edit_blog_comment_path , class: "btn" %></li>
			<li><%= link_to 'Delete Comment' , comment_path( comment ) , method: :delete , data: { confirm: "Are you sure?" } , class: "btn" %></li>
		</ul>
	</div>
<% end %>
