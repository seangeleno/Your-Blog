<section class="edit">
	<div class="container">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<%= form_for ( [ current_user , @blog , @comment ] ) do |f| %>
					<p><%= f.label :title %></p>
					<p class="title-area"><%= f.text_field :commenter %></p>
					<hr />
					<p><%= f.label :post %></p>
					<p class="post-area"><%= f.text_area :opinion %></p>
					<hr />
					<p><%= f.submit "Submit" , class: "btn" %></p>
				<% end %>
			</div>
		</div>
	</div>
</section>
