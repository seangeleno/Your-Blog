<section class="edit">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<%= form_for ( [ @blog, @comment ] ) do |f| %>
					<p><%= f.label :title %></p>
					<p class="title-area"><%= f.text_field :commenter %></p>
					<hr />
					<p><%= f.label :post %></p>
					<p class="post-area"><%= f.text_area :opinion %></p>
					<hr />
					<p><%= f.submit "Submit" %></p>
				<% end %>
				<div class="go-home">
					<%= link_to 'Go Home' , blogs_path %>
				</div>
			</div>
		</div>
	</div>
</section>
